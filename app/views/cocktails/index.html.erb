<% if @cocktails.any? %>
  <h3>List of cocktails</h3>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>Cocktails</h3>
  <p class="empty-state">
    You don't have any cocktails 
    <strong><%= link_to 'add', new_cocktail_path %></strong> !
  </p>
<% end %>